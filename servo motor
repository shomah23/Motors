// C++ code
//
#include <Servo.h>

int InputPotVal = 0;

int OutPutMotorVal = 0;

Servo servo_9;

void setup()
{
  pinMode(A0, INPUT);
  servo_9.attach(9, 500, 2500);
}

void loop()
{
  InputPotVal = analogRead(A0);
  OutPutMotorVal = map(InputPotVal, 0, 1023, 0, 180);
  servo_9.write(OutPutMotorVal);
  delay(10); // Delay a little bit to improve simulation performance
}
